{#
/**
 * @file
 * Default theme implementation to display a menu.
 *
 * Available variables:
 * - items: A nested list of menu items. Each menu item contains:
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *
 * @ingroup templates
 */
#}
{% if items %}
	<div class="menu-content-call hide-xs">
		<div class="call-menu hide-xs" style="margin:0 auto">
		    {% for key,item in items %}
			<div class="callbar">
				<a href="{{ item.url }}">
				<span class="hide-xs"><i class="fa fa-chevron-right" aria-hidden="true"></i></span>
				{{ item.title }}
				</a>
			</div>
		{% endfor %}
		</div>
	</div>
	<div class="planning-mobile hide-lg">
		{% for key,item in items %}
			<div class="call">
				<a href="{{ item.url }}"><span><i class="fa fa-road" aria-hidden="true"></i>&nbsp;</span>{{ item.title }}</a>
			</div>
			{% if loop.last == false %}
				<br style="height:0.5em" />
			{% endif %}
		{% endfor %}
	</div>
{% endif %}
